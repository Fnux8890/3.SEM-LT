  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title Upload Files
    meta(name='viewport' content='width=device-width, initial-scale=1')
  body
        
    form(action='/build/postRecording' method='POST' enctype='multipart/form-data')
      input(type='text' name='name' placeholder='File Name..' autocomplete='off')
